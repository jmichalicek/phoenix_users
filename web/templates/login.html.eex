<h1>Login</h1>
<%= form_tag "", method: "post" do %>
  <div class="form-group">
    <%= text_input :auth, :email, value: "", class: "form-control", placeholder: "Email Address" %>
  </div>
  <div class="form-group">
    <%= password_input :auth, :password, value: "", class: "form-control", placeholder: "Password" %>
  </div>
  <%= submit "Login", class: "btn btn-primary" %>
  <div>
    Don't have an account?  <%= link "Sign up", to: registration_path(@conn, :index) %>
<% end %>
